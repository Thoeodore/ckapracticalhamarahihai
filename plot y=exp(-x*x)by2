#include<stdio.h>
#include<conio.h> 
#include<math.h> 
void main()
{
int x,E,i; 
float y; 
clrscr();
printf(" y-------> \n"); 
printf(" 0"); 
for(i=1;i<=15;i++)
{
printf("--");
}
printf("\n");
for(x=-10;x<=10;x=x+2)
{
y=exp(-x*x/2);
E=(int) (20*y+0.5);
if(x==0) 
printf("x|"); 
else
printf(" |");
for(i=1;i<=E+1;i++)
{
printf("*");
}
printf("\n");
}
for(i=1;i<=2;i++)
{
printf(" |\n");
}
getch();
}
